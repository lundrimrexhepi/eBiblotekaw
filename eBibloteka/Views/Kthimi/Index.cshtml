                        "data": 'DataHuazimit',
                        "render": function (data, type, row) {
                            if (row.DataHuazimit == null)
                                return
                            var value = new Date(parseInt(row.DataHuazimit.substr(6)));
                            if (value.getDate() == 0001)
                                return '';

