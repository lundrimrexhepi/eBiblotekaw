@using eBibloteka.Helpers;
@using System.Globalization;
@model eBibloteka.Models.QasjaModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>KQZ - Votuesit</title>
    <meta charset="utf-8">

    <link rel="shortcut icon" href="~/favicon.ico" />
    @*@Styles.Render("~/Content/css")*@
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/Template/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/Template/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/Template/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    @*<link rel="stylesheet" href="~/Content/Template/dist/css/AdminLTE1.css">*@

    <link href="~/Content/Template/docs/assets/css/adminlte.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="~/Content/Template/dist/css/adminlte.min.css">*@
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Content/Template/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>


<body style="min-height: 466px; font-size:1.5rem; overflow: hidden;" class="os-theme-dark">
    <div class="container-fluid" style="background: #3c8ebc;border-bottom: solid; border-bottom-width: 3px;border-bottom-color: #2c3f50;">
        <a class="navbar-brand">
            <img src="~/Img/Albanian_Desktop.png" style="width: 300px; height: 45px;" />
        </a>
        <div class="nav navbar-nav navbar" style="float: right;font-size: 1.5rem;border-left: solid;border-left-width: 1px;border-left-color: #416889;width: 120px;padding: 0 0;margin: 0 0;">
       
        </div>
    </div>

    <div class="login-page os-theme-dark">
        <h1 style="text-align: center; font-weight:normal;">PLATFORMA PËR MENAXHIMIN E BIBLOTEKES</h1>
        <br />
        <div class="login-box" style="position:relative; min-height:40px;">
            <!-- /.login-logo -->
            <div class="card card-outline card-lightblue">
                <div class="card-body">
                    <br />
                    <p class="login-box-msg" style="font-size:20px;">Kyqu në llogarinë tënde</p>
                    <br />
                    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group mb-3 has-feedback">
                            @Html.TextBoxFor(model => model.Perdoruesi, new { @class = "form-control", @Placeholder ="Perdoruesi" })

                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fa fa-user"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Perdoruesi)
                        <div class="input-group mb-3">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder ="Fjalekalimi"})
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fa fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password)
                        <br />
                        <div class="row" style="font-size:1.5rem;">
                            <div class="col-2"></div>
                            <!-- /.col -->
                            <div class="col-8">
                                <button type="submit" class="btn btn-lightblue btn-block" id="btnLogin">Kyqu</button>
                                <br />
                            </div>

                            <div class="col-2"></div>
                            <!-- /.col -->
                        </div>
                        <div class="row">
                            <div class="row">
                                @Html.ValidationSummary(true)
                                @Html.ValidationMessageFor(model => model.ErrorMsg, null, new { @class = "form-danger", @style = "font-size:1.5rem" })
                            </div>
                        </div>
                    }
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Content/Template/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/Template/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/Template/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Content/Template/dist/js/adminlte.min.js"></script>
